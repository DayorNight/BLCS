<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/match_match"
    android:background="@color/white"
    android:padding="@dimen/space_line2">

    <Button
        android:id="@+id/btn_viewModel"
        style="@style/Button_alpha"
        android:text="Jetpack架构组件之ViewModel入门到精通"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_viewModel"
        style="@style/wrap_wrap"
        android:src="@mipmap/ic_life"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_viewModel" />

    <TextView
        android:id="@+id/tv_viewModel_life"
        style="@style/text_stander"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_viewModel" />

    <TextView
        android:id="@+id/tv_viewModel_dependency"
        style="@style/wrap_wrap"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_viewModel_life" />

</android.support.constraint.ConstraintLayout>